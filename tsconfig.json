{
  "compilerOptions": {
    "module":"es6",
    "target": "es6",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "sourceMap": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "noFallthroughCasesInSwitch": true,
    "typeRoots": ["./node_modules/@types","./src/types"],
    "outDir": "dist"
  },
  "ts-node": {
      "esm": true
  },
  "files" :["src/index.ts"],
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts","**/*.test.ts"],
  "lib":[
    "es6"
  ]
}